    "gatsby-plugin-catch-links": "^2.3.15",
    "gatsby-plugin-feed": "^2.5.14",
    "gatsby-plugin-google-analytics": "^2.3.17",
    "gatsby-plugin-mdx": "^1.2.46",
    "gatsby-plugin-postcss": "^2.3.13",
