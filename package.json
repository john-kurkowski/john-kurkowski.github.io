  "description": "Source for https://johnkurkowski.com.",
  "scripts": {
    "build": "gatsby build",
    "start": "gatsby develop --host 0.0.0.0",
    "test": "eslint . --ext js --ext ts --ext tsx && prettier-standard --check $(git ls-files '*.css' '*.js' '*.ts' '*.tsx') && npm run type-check",
