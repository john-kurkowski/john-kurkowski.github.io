{
  "name": "john-kurkowski.github.io",
  "version": "1.0.0",
  "description": "Source for https://johnkurkowski.com.",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "dev": "astro dev --host",
    "prepare": "husky && astro sync",
    "preview": "astro preview --host",
    "start": "astro dev --host",
    "test": "biome check . && stylelint $(git ls-files '*.css') && prettier --check '**/*.{md,mdx,yml}' && npm run type-check",
    "type-check": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/john-kurkowski/john-kurkowski.github.io.git"
  },
  "author": "John Kurkowski <john.kurkowski@gmail.com> (https://johnkurkowski.com/)",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/john-kurkowski/john-kurkowski.github.io#readme",
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@tailwindcss/vite": "^4.1.10",
    "astro": "^5.10.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/culori": "^4.0.0",
    "@types/node": "^22.15.3",
    "culori": "^4.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "lost-pixel": "^3.22.0",
    "prettier": "^3.6.0",
    "stylelint": "^16.23.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "biome check --write"
    ],
    "*.{astro,js,jsx,mjs,mts,ts,tsx}": [
      "biome check --write"
    ],
    "*.{json,jsonc}": [
      "biome check --write"
    ],
    "*.{md,mdx,yml}": [
      "prettier --write"
    ]
  }
}
