{
  "name": "john-kurkowski.github.io",
  "version": "1.0.0",
  "description": "Source for https://johnkurkowski.com.",
  "scripts": {
    "build": "gatsby build",
    "prepare": "husky",
    "start": "gatsby develop --host 0.0.0.0",
    "test": "eslint . --ext js --ext ts --ext tsx && prettier-standard --check $(git ls-files '*.css' '*.js' '*.ts' '*.tsx') && npm run type-check",
    "type-check": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/john-kurkowski/john-kurkowski.github.io.git"
  },
  "author": "John Kurkowski <john.kurkowski@gmail.com> (https://johnkurkowski.com/)",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/john-kurkowski/john-kurkowski.github.io#readme",
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "gatsby": "^5.13.3",
    "gatsby-plugin-catch-links": "^5.13.1",
    "gatsby-plugin-feed": "^5.13.1",
    "gatsby-plugin-google-gtag": "^5.13.1",
    "gatsby-plugin-mdx": "^5.13.1",
    "gatsby-plugin-postcss": "^6.13.1",
    "gatsby-plugin-react-helmet": "^6.13.1",
    "gatsby-plugin-react-svg": "^3.3.0",
    "gatsby-plugin-robots-txt": "^1.8.0",
    "gatsby-plugin-root-import": "^2.0.9",
    "gatsby-plugin-sitemap": "^6.13.1",
    "gatsby-plugin-typescript": "^5.13.1",
    "gatsby-remark-autolink-headers": "^6.13.1",
    "gatsby-remark-copy-linked-files": "^6.13.1",
    "gatsby-remark-prismjs": "^7.13.1",
    "gatsby-remark-smartypants": "^6.13.1",
    "gatsby-source-filesystem": "^5.13.1",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@ksmithut/prettier-standard": "^0.2.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix",
      "prettier-standard"
    ],
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier-standard"
    ]
  },
  "volta": {
    "node": "20.12.0",
    "npm": "10.5.0"
  }
}
